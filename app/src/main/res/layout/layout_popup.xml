<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/list">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/popup_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ilham"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/popup_img"
            android:layout_toStartOf="@id/popup_ilham"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />

        <TextView
            android:id="@+id/popup_ilham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_img"
            android:layout_centerHorizontal="true"
            android:text="@string/ilham_gusti_randa"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_below="@id/popup_ilham"
            android:layout_toStartOf="@id/popup_email"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/ic_email_black_24dp" />

        <TextView
            android:id="@+id/popup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_ilham"
            android:layout_centerHorizontal="true"
            android:text="@string/email"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:background="@drawable/button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/OK"
            android:textSize="20sp" />

    </RelativeLayout>


</RelativeLayout>